@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-2xl font-bold text-slate-800 mb-2 text-center">
            Iniciar sesión
        </h1>
        <p class="text-sm text-slate-500 mb-6 text-center">
            Ingresa tus credenciales para acceder al sistema de inventario.
        </p>

        <form id="account" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-3"></div>

            <div>
                <label asp-for="Input.Email" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                <input asp-for="Input.Email"
                       class="w-full px-3 py-2 rounded border border-slate-300 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm" />
                <span asp-validation-for="Input.Email" class="text-xs text-red-500"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                <input asp-for="Input.Password"
                       class="w-full px-3 py-2 rounded border border-slate-300 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm" />
                <span asp-validation-for="Input.Password" class="text-xs text-red-500"></span>
            </div>

            <div class="flex items-center justify-between text-xs">
                <label asp-for="Input.RememberMe" class="flex items-center gap-2 text-slate-600">
                    <input asp-for="Input.RememberMe" class="rounded border-slate-300" />
                    <span>Recordarme</span>
                </label>

                <a asp-page="./ForgotPassword" class="text-emerald-600 hover:text-emerald-700">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>

            <button id="login-submit" type="submit"
                    class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 rounded-lg text-sm transition">
                Ingresar
            </button>

            <div class="text-center text-xs text-slate-500 mt-4">
                ¿No tienes una cuenta?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                   class="text-emerald-600 hover:text-emerald-700 font-semibold">
                    Regístrate aquí
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
