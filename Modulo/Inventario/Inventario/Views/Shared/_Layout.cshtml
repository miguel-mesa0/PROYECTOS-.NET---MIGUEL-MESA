@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventario Repuestos</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body class="bg-gray-100 flex min-h-screen">

    <!-- SIDEBAR -->
    <aside class="w-64 bg-slate-900 text-white flex flex-col shadow-xl">
        <!-- Logo -->
        <div class="p-5 border-b border-slate-800 text-center">
            <h1 class="text-xl font-bold tracking-wider">SIGOT</h1>
            <p class="text-xs text-slate-400">Repuestos y Bodegas</p>
        </div>

        <!-- NAVIGATION -->
        <nav class="flex-1 p-5 space-y-2 text-sm">

            <!-- Dashboard -->
            <a asp-controller="Home" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-gauge mr-2"></i> Dashboard
            </a>

            <p class="text-[10px] uppercase tracking-wide text-slate-500 mt-4">Catálogos</p>

            <a asp-controller="Categorias" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-tags mr-2"></i> Categorías
            </a>

            <a asp-controller="Bodegas" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-warehouse mr-2"></i> Bodegas
            </a>

            <a asp-controller="Proveedores" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-truck-field mr-2"></i> Proveedores
            </a>

            <a asp-controller="Clientes" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-users mr-2"></i> Clientes
            </a>

            <p class="text-[10px] uppercase tracking-wide text-slate-500 mt-4">Inventario</p>

            <a asp-controller="Repuestoes" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-screwdriver-wrench mr-2"></i> Repuestos
            </a>

            <a asp-controller="Compras" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-cart-plus mr-2"></i> Compras
            </a>

            <a asp-controller="Ventas" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-cash-register mr-2"></i> Ventas
            </a>

            <a asp-controller="AjustesInventarios" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-scale-balanced mr-2"></i> Ajustes
            </a>

            <a asp-controller="MovimientosInventario" asp-action="Index"
               class="block px-4 py-2 rounded hover:bg-slate-800">
                <i class="fa-solid fa-clock-rotate-left mr-2"></i> Kardex
            </a>

        </nav>

        <!-- FOOTER / USER INFO -->
        <div class="p-5 border-t border-slate-800">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="text-xs text-slate-300 mb-3">
                    <i class="fa-solid fa-circle-user mr-1"></i>
                    @User.Identity?.Name
                </div>

                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                    <button class="w-full bg-red-600 hover:bg-red-700 text-xs font-bold px-4 py-2 rounded">
                        <i class="fa-solid fa-right-from-bracket mr-1"></i> Cerrar sesión
                    </button>
                </form>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login"
                   class="block w-full bg-emerald-600 hover:bg-emerald-700 text-center text-xs font-bold px-4 py-2 rounded">
                    <i class="fa-solid fa-arrow-right-to-bracket mr-1"></i> Iniciar sesión
                </a>
            }
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <div class="flex-1 flex flex-col">

        <!-- HEADER -->
        <header class="bg-white shadow px-6 py-4 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-700">@ViewData["Title"]</h2>

            <div class="text-xs text-gray-500">
                Sistema avanzado de Inventario
            </div>
        </header>

        <!-- BODY -->
        <main class="flex-1 p-6">
            @RenderBody()
        </main>

    </div>

  
    @RenderSection("Scripts", required: false)

</body>
</html>
