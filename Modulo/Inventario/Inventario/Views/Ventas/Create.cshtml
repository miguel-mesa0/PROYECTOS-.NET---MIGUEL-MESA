@using Inventario.Models.Inventario
@model Inventario.Models.Inventario.Venta

@{
    ViewData["Title"] = "Nueva venta";

    var bodegas = ViewData["Bodegas"] as List<Bodega>;
    var clientes = ViewData["Clientes"] as List<Cliente>;
    var repuestos = ViewData["Repuestos"] as List<Repuesto>;
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Registrar venta</h1>
            <p class="text-sm text-slate-500">Selecciona el cliente, la bodega y los repuestos a vender.</p>
        </div>

        <a asp-action="Index"
           class="text-xs px-4 py-2 rounded bg-slate-100 hover:bg-slate-200 text-slate-700">
            Volver
        </a>
    </div>

    <div class="bg-white rounded-xl shadow p-6 space-y-6">
        <form asp-action="Create" method="post" id="ventaForm">

            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-3"></div>

            <!-- CABECERA -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="text-sm text-slate-700 font-semibold mb-1 block">Bodega</label>
                    <select asp-for="BodegaId" class="w-full px-3 py-2 border rounded text-sm">
                        <option value="">-- Seleccione --</option>
                        @foreach (var b in bodegas)
                        {
                            <option value="@b.Id">@b.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="BodegaId" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label class="text-sm text-slate-700 font-semibold mb-1 block">Cliente</label>
                    <select asp-for="ClienteId" class="w-full px-3 py-2 border rounded text-sm">
                        <option value="">-- Seleccione --</option>
                        @foreach (var c in clientes)
                        {
                            <option value="@c.Id">@c.Nombre</option>
                        }
                    </select>
                    <span asp-validation-for="ClienteId" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label class="text-sm text-slate-700 font-semibold mb-1 block">Fecha</label>
                    <input type="text"
                           value="@DateTime.Now.ToString("dd/MM/yyyy HH:mm")"
                           class="w-full px-3 py-2 bg-slate-100 rounded border text-sm" disabled />
                </div>
            </div>

            <!-- DETALLES -->
            <div class="flex justify-between items-center mt-6">
                <h2 class="text-sm font-bold text-slate-700 uppercase">Repuestos vendidos</h2>
                <button type="button" id="btnAgregarDetalle"
                        class="px-3 py-1.5 bg-emerald-600 hover:bg-emerald-700 text-white rounded text-xs">
                    + Agregar repuesto
                </button>
            </div>

            <div class="overflow-x-auto mt-3">
                <table class="min-w-full text-xs" id="tablaDetalles">
                    <thead class="bg-slate-100">
                        <tr>
                            <th class="px-3 py-2 text-left">Repuesto</th>
                            <th class="px-3 py-2 text-right">Cantidad</th>
                            <th class="px-3 py-2 text-right">Precio unitario</th>
                            <th class="px-3 py-2 text-right">Subtotal</th>
                            <th class="px-3 py-2 text-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot class="bg-slate-50">
                        <tr>
                            <td colspan="3" class="px-3 py-2 text-right font-semibold">Total:</td>
                            <td class="px-3 py-2 text-right text-lg font-bold">
                                $ <span id="totalGeneral">0.00</span>
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="flex justify-end mt-6">
                <button type="submit"
                        class="px-5 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm">
                    Guardar venta
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            let index = 0;

            const repuestos = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                repuestos.Select(r => new {
                    r.Id,
                    r.Nombre,
                    r.PrecioCostoPromedio,
                    r.MargenGananciaPorcentaje,
                    r.DescuentoPorcentaje
                })
            ));

            const tbody = document.querySelector("#tablaDetalles tbody");
            const totalGeneralSpan = document.getElementById("totalGeneral");

            function calcularPrecioVenta(repuestoId) {
                const r = repuestos.find(x => x.Id === repuestoId);
                if (!r) return 0;

                const costo = parseFloat(r.PrecioCostoPromedio || 0);
                const margen = parseFloat(r.MargenGananciaPorcentaje || 0);
                const desc = parseFloat(r.DescuentoPorcentaje || 0);

                let precioBase = costo * (1 + margen / 100);
                let precioFinal = precioBase * (1 - desc / 100);

                if (isNaN(precioFinal) || precioFinal < 0)
                    precioFinal = 0;

                return precioFinal;
            }

            function crearFila() {
                const tr = document.createElement("tr");
                tr.classList.add("border-b");

                tr.innerHTML = `
                    <td class="px-3 py-2">
                        <select name="detalles[${index}].RepuestoId"
                                class="select-repuesto w-full border rounded px-2 py-1 text-xs">
                            <option value="">-- Seleccione --</option>
                            ${repuestos.map(r => `<option value="${r.Id}">${r.Nombre}</option>`).join("")}
                        </select>
                    </td>

                    <td class="px-3 py-2 text-right">
                        <input type="number" name="detalles[${index}].Cantidad"
                               class="cantidad-det w-20 border rounded px-1 py-1 text-right text-xs"
                               min="1" step="1" />
                    </td>

                    <td class="px-3 py-2 text-right">
                        <input type="number" name="detalles[${index}].PrecioVentaUnitario"
                               class="precio-det w-24 border rounded px-1 py-1 text-right text-xs"
                               min="0" step="0.01" />
                    </td>

                    <td class="px-3 py-2 text-right">
                        <span class="subtotal-det font-semibold">0.00</span>
                    </td>

                    <td class="px-3 py-2 text-center">
                        <button type="button"
                                class="btn-eliminar px-2 py-1 bg-red-500 hover:bg-red-600 text-white rounded text-xs">
                            X
                        </button>
                    </td>
                `;

                tbody.appendChild(tr);
                index++;
            }

            function actualizarTotales() {
                let total = 0;

                tbody.querySelectorAll("tr").forEach(row => {
                    const cant = parseFloat(row.querySelector(".cantidad-det")?.value || 0);
                    const precio = parseFloat(row.querySelector(".precio-det")?.value || 0);
                    const subtotal = cant * precio;

                    row.querySelector(".subtotal-det").textContent = subtotal.toFixed(2);
                    total += subtotal;
                });

                totalGeneralSpan.textContent = total.toFixed(2);
            }

            // Eventos
            document.getElementById("btnAgregarDetalle").addEventListener("click", () => crearFila());

            tbody.addEventListener("input", e => {
                if (e.target.classList.contains("cantidad-det") ||
                    e.target.classList.contains("precio-det")) {
                    actualizarTotales();
                }
            });

            tbody.addEventListener("change", e => {
                if (e.target.classList.contains("select-repuesto")) {
                    const repuestoId = parseInt(e.target.value);
                    const row = e.target.closest("tr");
                    const inputPrecio = row.querySelector(".precio-det");
                    const precio = calcularPrecioVenta(repuestoId);
                    if (precio > 0) {
                        inputPrecio.value = precio.toFixed(2);
                    }
                    actualizarTotales();
                }
            });

            tbody.addEventListener("click", e => {
                if (e.target.classList.contains("btn-eliminar")) {
                    e.target.closest("tr").remove();
                    actualizarTotales();
                }
            });

            // Fila inicial
            crearFila();
        })();
    </script>
}
