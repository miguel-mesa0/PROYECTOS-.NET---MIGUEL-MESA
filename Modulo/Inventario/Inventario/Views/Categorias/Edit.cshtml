@model Inventario.Models.Inventario.Categoria

@{
    ViewData["Title"] = "Editar categoría";
}

<div class="max-w-xl mx-auto bg-white rounded-xl shadow-md p-6">
    <h1 class="text-xl font-bold text-slate-800 mb-1">Editar categoría</h1>
    <p class="text-sm text-slate-500 mb-4">Modifica los datos de la categoría seleccionada.</p>

    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-sm text-red-500 mb-2"></div>

        <div>
            <label asp-for="Nombre" class="block text-sm font-semibold text-slate-700 mb-1"></label>
            <input asp-for="Nombre"
                   class="w-full px-3 py-2 rounded border border-slate-300 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            <span asp-validation-for="Nombre" class="text-xs text-red-500"></span>
        </div>

        <div>
            <label asp-for="Descripcion" class="block text-sm font-semibold text-slate-700 mb-1"></label>
            <textarea asp-for="Descripcion" rows="3"
                      class="w-full px-3 py-2 rounded border border-slate-300 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"></textarea>
            <span asp-validation-for="Descripcion" class="text-xs text-red-500"></span>
        </div>

        <div class="flex justify-between items-center pt-2">
            <a asp-action="Index"
               class="text-xs text-slate-500 hover:text-slate-700">
                ← Volver a la lista
            </a>

            <button type="submit"
                    class="px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-semibold rounded-lg">
                Guardar cambios
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
