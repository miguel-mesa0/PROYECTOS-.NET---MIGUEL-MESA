@model Inventario.Models.Inventario.Categoria

@{
    ViewData["Title"] = "Detalles de categoría";
}

<div class="max-w-xl mx-auto bg-white rounded-xl shadow-md p-6">
    <h1 class="text-xl font-bold text-slate-800 mb-4">Detalles de categoría</h1>

    <dl class="space-y-3 text-sm">
        <div>
            <dt class="font-semibold text-slate-600">Nombre</dt>
            <dd class="text-slate-800">@Model.Nombre</dd>
        </div>
        <div>
            <dt class="font-semibold text-slate-600">Descripción</dt>
            <dd class="text-slate-800">@Model.Descripcion</dd>
        </div>
    </dl>

    <div class="flex justify-between items-center mt-6">
        <a asp-action="Index" class="text-xs text-slate-500 hover:text-slate-700">
            ← Volver a la lista
        </a>

        <a asp-action="Edit" asp-route-id="@Model.Id"
           class="px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-xs font-semibold rounded-lg">
            Editar
        </a>
    </div>
</div>
