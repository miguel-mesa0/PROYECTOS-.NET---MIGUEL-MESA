@model Inventario.Models.Inventario.Cliente

@{
    ViewData["Title"] = "Nuevo cliente";
}

<div class="max-w-xl mx-auto bg-white rounded-xl shadow-md p-6">
    <h1 class="text-xl font-bold text-slate-800 mb-1">Nuevo Cliente</h1>
    <p class="text-sm text-slate-500 mb-4">Crea una Cliente para agrupar tus repuestos.</p>

    <form asp-action="Create" method="post" class="space-y-4">
        <div asp-validation-summary="All" class="text-sm text-red-500 mb-2"></div>

        <div>
            <label asp-for="Nombre" class="block text-sm font-semibold text-slate-700 mb-1"></label>
            <input asp-for="Nombre"
                   class="w-full px-3 py-2 rounded border border-slate-300 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            <span asp-validation-for="Nombre" class="text-xs text-red-500"></span>
        </div>

        <div>
            <label asp-for="Documento" class="block text-sm font-semibold text-slate-700 mb-1"></label>
            <input asp-for="Documento"
                   class="w-full px-3 py-2 rounded border border-slate-300 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            <span asp-validation-for="Documento" class="text-xs text-red-500"></span>
        </div>
        <div>
            <label asp-for="Telefono" class="block text-sm font-semibold text-slate-700 mb-1"></label>
            <input asp-for="Telefono"
                   class="w-full px-3 py-2 rounded border border-slate-300 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            <span asp-validation-for="Telefono" class="text-xs text-red-500"></span>
        </div>
        <div>
            <label asp-for="Email" class="block text-sm font-semibold text-slate-700 mb-1"></label>
            <input asp-for="Email"
                   class="w-full px-3 py-2 rounded border border-slate-300 text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
            <span asp-validation-for="Email" class="text-xs text-red-500"></span>
        </div>

        <div class="flex justify-between items-center pt-2">
            <a asp-action="Index"
               class="text-xs text-slate-500 hover:text-slate-700">
                ← Volver a la lista
            </a>

            <button type="submit"
                    class="px-4 py-2 bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-semibold rounded-lg">
                Guardar Cliente
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
