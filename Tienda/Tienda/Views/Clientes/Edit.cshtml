@model Tienda.Models.Cliente

@{
    ViewData["Title"] = "Editar cliente";
}

<h1 class="text-2xl font-semibold text-neutral-800 mb-1">Editar cliente</h1>
<p class="text-sm text-neutral-500 mb-4">Modifica la información del cliente.</p>

<form asp-action="Edit" method="post" class="space-y-6">
    <div asp-validation-summary="ModelOnly" class="text-sm text-red-600 mb-2"></div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            <label asp-for="NombreCompleto" class="block text-sm font-medium text-neutral-700 mb-1"></label>
            <input asp-for="NombreCompleto"
                   class="w-full rounded-lg border border-neutral-300 bg-neutral-50 text-sm focus:ring-0 focus:border-neutral-600" />
            <span asp-validation-for="NombreCompleto" class="text-xs text-red-600"></span>
        </div>
        <div>
            <label asp-for="Correo" class="block text-sm font-medium text-neutral-700 mb-1"></label>
            <input asp-for="Correo"
                   class="w-full rounded-lg border border-neutral-300 bg-neutral-50 text-sm focus:ring-0 focus:border-neutral-600" />
            <span asp-validation-for="Correo" class="text-xs text-red-600"></span>
        </div>
        <div>
            <label asp-for="Telefono" class="block text-sm font-medium text-neutral-700 mb-1"></label>
            <input asp-for="Telefono"
                   class="w-full rounded-lg border border-neutral-300 bg-neutral-50 text-sm focus:ring-0 focus:border-neutral-600" />
            <span asp-validation-for="Telefono" class="text-xs text-red-600"></span>
        </div>
        <div>
            <label asp-for="Direccion" class="block text-sm font-medium text-neutral-700 mb-1"></label>
            <input asp-for="Direccion"
                   class="w-full rounded-lg border border-neutral-300 bg-neutral-50 text-sm focus:ring-0 focus:border-neutral-600" />
            <span asp-validation-for="Direccion" class="text-xs text-red-600"></span>
        </div>
    </div>

    <div class="flex justify-end gap-3 pt-2">
        <a asp-action="Index"
           class="px-4 py-2 rounded-lg text-sm font-medium text-neutral-700 border border-neutral-300 bg-white hover:bg-neutral-100">
            Cancelar
        </a>

        <button type="submit"
                class="px-4 py-2 rounded-lg text-sm font-semibold text-white bg-neutral-800 hover:bg-neutral-900 shadow">
            Guardar cambios
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
