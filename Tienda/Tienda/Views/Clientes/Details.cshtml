@model Tienda.Models.Cliente

@{
    ViewData["Title"] = "Detalles del cliente";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-neutral-800">Detalles del cliente</h1>
            <p class="text-sm text-neutral-500">Consulta la información registrada de este cliente.</p>
        </div>

        <a asp-action="Index"
           class="px-4 py-2 rounded-lg text-sm font-medium text-neutral-700 bg-neutral-100 hover:bg-neutral-200 border border-neutral-300">
            Volver a clientes
        </a>
    </div>

    <div class="rounded-xl border border-neutral-200 bg-neutral-50 p-5">
        <dl class="text-sm text-neutral-700 space-y-3">
            <div class="flex justify-between">
                <dt class="font-medium">Nombre completo</dt>
                <dd>@Model.NombreCompleto</dd>
            </div>
            <div class="flex justify-between">
                <dt class="font-medium">Correo electrónico</dt>
                <dd>@Model.Correo</dd>
            </div>
            <div class="flex justify-between">
                <dt class="font-medium">Teléfono</dt>
                <dd>@Model.Telefono</dd>
            </div>
            <div class="flex justify-between">
                <dt class="font-medium">Dirección</dt>
                <dd>@Model.Direccion</dd>
            </div>
        </dl>
    </div>

    <div class="flex justify-end gap-3">
        <a asp-action="Edit" asp-route-id="@Model.ClienteId"
           class="px-4 py-2 rounded-lg text-sm font-medium text-blue-800 bg-blue-100 hover:bg-blue-200">
            Editar
        </a>

        <a asp-action="Delete" asp-route-id="@Model.ClienteId"
           class="px-4 py-2 rounded-lg text-sm font-medium text-red-700 bg-red-100 hover:bg-red-200">
            Eliminar
        </a>
    </div>
</div>
