@model IEnumerable<Tienda.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<div class="max-w-7xl">
    <div class="mb-12 flex flex-col md:flex-row md:items-start md:justify-between gap-6">
        <div>
            <h1 class="text-4xl font-extralight text-neutral-900 tracking-tight mb-3">Gestión de ventas</h1>
            <div class="w-16 h-px bg-neutral-900 mb-4"></div>
            <p class="text-neutral-500 font-light">Consulta, filtra y administra las ventas registradas en el sistema.</p>
        </div>
        <a asp-action="Create"
           class="px-8 py-3 text-sm uppercase tracking-wider text-white bg-neutral-900 hover:bg-neutral-800 font-medium transition-colors duration-200 whitespace-nowrap">
            + Nueva venta
        </a>
    </div>

    <form asp-action="Index" method="get" class="mb-8 bg-neutral-50 border-l-4 border-neutral-900 p-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 items-end">
            <div class="md:col-span-2 space-y-2">
                <label class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Cliente</label>
                <input type="text" name="cliente" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-300 text-neutral-900 placeholder-neutral-400 focus:outline-none focus:border-neutral-900 transition-colors duration-200" placeholder="Nombre del cliente..." />
            </div>
            <div class="space-y-2">
                <label class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Fecha</label>
                <input type="date" name="fecha" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-300 text-neutral-900 focus:outline-none focus:border-neutral-900 transition-colors duration-200" />
            </div>
            <button type="submit"
                    class="px-8 py-3 text-sm uppercase tracking-wider text-white bg-neutral-900 hover:bg-neutral-800 font-medium transition-colors duration-200">
                Buscar
            </button>
        </div>
    </form>

    <div class="border border-neutral-300">
        <table class="min-w-full divide-y divide-neutral-300">
            <thead class="bg-neutral-50">
                <tr>
                    <th class="px-6 py-4 text-left text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Cliente</th>
                    <th class="px-6 py-4 text-left text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Fecha</th>
                    <th class="px-6 py-4 text-right text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Total</th>
                    <th class="px-6 py-4 text-right text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-neutral-200 bg-white">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-neutral-50 transition-colors duration-150">
                        <td class="px-6 py-4 font-light text-neutral-900">@item.Cliente?.NombreCompleto</td>
                        <td class="px-6 py-4 font-light text-neutral-600">@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="px-6 py-4 text-right font-light text-neutral-900">@item.Total.ToString("C")</td>
                        <td class="px-6 py-4">
                            <div class="flex justify-end gap-2">
                                <a asp-action="Details" asp-route-id="@item.VentaId"
                                   class="px-4 py-2 text-[10px] uppercase tracking-widest text-neutral-900 border border-neutral-300 hover:border-neutral-900 font-medium transition-all duration-200">
                                    Ver
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.VentaId"
                                   class="px-4 py-2 text-[10px] uppercase tracking-widest text-neutral-900 border border-neutral-300 hover:border-neutral-900 font-medium transition-all duration-200">
                                    Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.VentaId"
                                   class="px-4 py-2 text-[10px] uppercase tracking-widest text-white bg-red-900 hover:bg-red-800 font-medium transition-colors duration-200">
                                    Eliminar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>