@model Tienda.Models.Venta

@{
    ViewData["Title"] = "Eliminar venta";
}

<div class="max-w-5xl">
    <div class="mb-12 flex items-start justify-between">
        <div>
            <h1 class="text-4xl font-extralight text-neutral-900 tracking-tight mb-3">Eliminar venta</h1>
            <div class="w-16 h-px bg-red-900 mb-4"></div>
            <p class="text-neutral-500 font-light">Se eliminarán también todos los detalles asociados. Esta acción es permanente.</p>
        </div>
        <a asp-action="Index"
           class="px-6 py-2 text-xs uppercase tracking-widest text-neutral-600 hover:text-neutral-900 border border-neutral-300 hover:border-neutral-900 transition-all duration-200">
            ← Volver
        </a>
    </div>

    <div class="bg-neutral-50 border-l-4 border-red-900 p-8 mb-8">
        <dl class="space-y-6 mb-8">
            <div class="grid grid-cols-3 gap-4 pb-6 border-b border-neutral-200">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Cliente</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.Cliente?.NombreCompleto</dd>
            </div>
            <div class="grid grid-cols-3 gap-4 pb-6 border-b border-neutral-200">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Fecha</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Total</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.Total.ToString("C")</dd>
            </div>
        </dl>

        <div>
            <h2 class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium mb-4">Productos incluidos</h2>
            <div class="border border-neutral-300 bg-white">
                <table class="min-w-full divide-y divide-neutral-300">
                    <thead class="bg-neutral-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Producto</th>
                            <th class="px-6 py-3 text-right text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Cantidad</th>
                            <th class="px-6 py-3 text-right text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-neutral-200">
                        @foreach (var d in Model.DetallesVenta)
                        {
                            <tr>
                                <td class="px-6 py-3 font-light text-neutral-900">@d.Producto?.Nombre</td>
                                <td class="px-6 py-3 text-right font-light text-neutral-900">@d.Cantidad</td>
                                <td class="px-6 py-3 text-right font-light text-neutral-900">@d.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="flex justify-end gap-6 pt-8 border-t border-neutral-200">
        <input type="hidden" asp-for="VentaId" />

        <a asp-action="Index"
           class="px-8 py-3 text-sm uppercase tracking-wider text-neutral-600 hover:text-neutral-900 font-medium transition-colors duration-200">
            Cancelar
        </a>
        <button type="submit"
                class="px-8 py-3 text-sm uppercase tracking-wider text-white bg-red-900 hover:bg-red-800 font-medium transition-colors duration-200">
            Confirmar eliminación
        </button>
    </form>
</div>