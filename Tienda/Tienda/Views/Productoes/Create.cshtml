@model Tienda.Models.Producto

@{
    ViewData["Title"] = "Nuevo producto";
}

<div class="max-w-4xl">
    <div class="mb-12">
        <h1 class="text-4xl font-extralight text-neutral-900 tracking-tight mb-3">Nuevo producto</h1>
        <div class="w-16 h-px bg-neutral-900 mb-4"></div>
        <p class="text-neutral-500 font-light">Registra un producto con su precio y stock disponible.</p>
    </div>

    <form asp-action="Create" method="post" class="space-y-8">
        <div asp-validation-summary="ModelOnly" class="bg-neutral-50 border-l-2 border-red-900 px-6 py-4 text-sm text-red-900"></div>

        <div class="space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-8">
                <div class="space-y-2">
                    <label asp-for="Nombre" class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium"></label>
                    <input asp-for="Nombre" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-200 text-neutral-900 placeholder-neutral-300 focus:outline-none focus:border-neutral-900 transition-colors duration-200" />
                    <span asp-validation-for="Nombre" class="text-xs text-red-900 block mt-2"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="Codigo" class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium"></label>
                    <input asp-for="Codigo" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-200 text-neutral-900 placeholder-neutral-300 focus:outline-none focus:border-neutral-900 transition-colors duration-200" />
                    <span asp-validation-for="Codigo" class="text-xs text-red-900 block mt-2"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="PrecioUnitario" class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium"></label>
                    <input asp-for="PrecioUnitario" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-200 text-neutral-900 placeholder-neutral-300 focus:outline-none focus:border-neutral-900 transition-colors duration-200" />
                    <span asp-validation-for="PrecioUnitario" class="text-xs text-red-900 block mt-2"></span>
                </div>
                <div class="space-y-2">
                    <label asp-for="StockDisponible" class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium"></label>
                    <input asp-for="StockDisponible" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-200 text-neutral-900 placeholder-neutral-300 focus:outline-none focus:border-neutral-900 transition-colors duration-200" />
                    <span asp-validation-for="StockDisponible" class="text-xs text-red-900 block mt-2"></span>
                </div>
            </div>

            <div class="space-y-2">
                <label asp-for="Descripcion" class="block text-[11px] uppercase tracking-widest text-neutral-400 font-medium"></label>
                <textarea asp-for="Descripcion" rows="4" class="w-full px-0 py-3 bg-transparent border-0 border-b-2 border-neutral-200 text-neutral-900 placeholder-neutral-300 focus:outline-none focus:border-neutral-900 transition-colors duration-200 resize-none"></textarea>
                <span asp-validation-for="Descripcion" class="text-xs text-red-900 block mt-2"></span>
            </div>
        </div>

        <div class="flex justify-end gap-6 pt-8 mt-8 border-t border-neutral-200">
            <a asp-action="Index"
               class="px-8 py-3 text-sm uppercase tracking-wider text-neutral-600 hover:text-neutral-900 font-medium transition-colors duration-200">
                Cancelar
            </a>
            <button type="submit"
                    class="px-8 py-3 text-sm uppercase tracking-wider text-white bg-neutral-900 hover:bg-neutral-800 font-medium transition-colors duration-200">
                Guardar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}