@model Tienda.Models.Producto

@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="max-w-4xl">
    <div class="mb-12 flex items-start justify-between">
        <div>
            <h1 class="text-4xl font-extralight text-neutral-900 tracking-tight mb-3">Eliminar producto</h1>
            <div class="w-16 h-px bg-red-900 mb-4"></div>
            <p class="text-neutral-500 font-light">Esta acción es permanente y no se puede deshacer.</p>
        </div>
        <a asp-action="Index"
           class="px-6 py-2 text-xs uppercase tracking-widest text-neutral-600 hover:text-neutral-900 border border-neutral-300 hover:border-neutral-900 transition-all duration-200">
            ← Volver
        </a>
    </div>

    <div class="bg-neutral-50 border-l-4 border-red-900 p-8 mb-8">
        <dl class="space-y-6">
            <div class="grid grid-cols-3 gap-4 pb-6 border-b border-neutral-200">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Nombre</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.Nombre</dd>
            </div>
            <div class="grid grid-cols-3 gap-4 pb-6 border-b border-neutral-200">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Código</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.Codigo</dd>
            </div>
            <div class="grid grid-cols-3 gap-4 pb-6 border-b border-neutral-200">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Precio unitario</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.PrecioUnitario.ToString("C")</dd>
            </div>
            <div class="grid grid-cols-3 gap-4 pb-6 border-b border-neutral-200">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Stock disponible</dt>
                <dd class="col-span-2 text-neutral-900 font-light">@Model.StockDisponible</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="text-[11px] uppercase tracking-widest text-neutral-400 font-medium">Descripción</dt>
                <dd class="col-span-2 text-neutral-700 font-light leading-relaxed">@Model.Descripcion</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="flex justify-end gap-6 pt-8 border-t border-neutral-200">
        <input type="hidden" asp-for="ProductoId" />

        <a asp-action="Index"
           class="px-8 py-3 text-sm uppercase tracking-wider text-neutral-600 hover:text-neutral-900 font-medium transition-colors duration-200">
            Cancelar
        </a>
        <button type="submit"
                class="px-8 py-3 text-sm uppercase tracking-wider text-white bg-red-900 hover:bg-red-800 font-medium transition-colors duration-200">
            Confirmar eliminación
        </button>
    </form>
</div>