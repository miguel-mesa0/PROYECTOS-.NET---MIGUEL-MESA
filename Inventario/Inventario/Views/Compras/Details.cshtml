@model Inventario.Models.Inventario.Compra

@{
    ViewData["Title"] = "Detalle de compra";
}

<div class="space-y-6">

    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-slate-800">Detalle de compra</h1>

        <a asp-action="Index"
           class="px-4 py-2 bg-slate-100 text-slate-700 rounded text-xs hover:bg-slate-200">
            Volver
        </a>
    </div>

    <!-- CABECERA -->
    <div class="bg-white rounded-xl shadow p-6 grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
        <div>
            <p class="text-xs uppercase text-slate-500 font-semibold">Número</p>
            <p class="font-semibold text-slate-800">COMP-@Model.Id</p>
        </div>

        <div>
            <p class="text-xs uppercase text-slate-500 font-semibold">Fecha</p>
            <p class="text-slate-700">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
        </div>

        <div>
            <p class="text-xs uppercase text-slate-500 font-semibold">Bodega</p>
            <p class="text-slate-700">@Model.Bodega?.Nombre</p>
        </div>

        <div>
            <p class="text-xs uppercase text-slate-500 font-semibold">Proveedor</p>
            <p class="text-slate-700">@Model.Proveedor?.Nombre</p>
        </div>

        <div>
            <p class="text-xs uppercase text-slate-500 font-semibold">Subtotal</p>
            <p class="text-slate-700">$ @Model.Subtotal.ToString("N2")</p>
        </div>

        <div>
            <p class="text-xs uppercase text-slate-500 font-semibold">Total</p>
            <p class="text-slate-800 font-bold">$ @Model.Total.ToString("N2")</p>
        </div>
    </div>

    <!-- DETALLES -->
    <div class="bg-white rounded-xl shadow overflow-hidden">
        <div class="px-4 py-3 border-b bg-slate-50">
            <h2 class="text-sm font-bold text-slate-700 uppercase">Repuestos incluidos</h2>
        </div>

        <table class="min-w-full text-xs">
            <thead class="bg-slate-100">
                <tr>
                    <th class="px-3 py-2 text-left">Código</th>
                    <th class="px-3 py-2 text-left">Repuesto</th>
                    <th class="px-3 py-2 text-right">Cantidad</th>
                    <th class="px-3 py-2 text-right">Costo</th>
                    <th class="px-3 py-2 text-right">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.ComprasDetalles)
                {
                    var subtotal = d.Cantidad * d.PrecioCostoUnitario;

                    <tr class="border-b hover:bg-slate-50">
                        <td class="px-3 py-2">@d.Repuesto?.Codigo</td>
                        <td class="px-3 py-2">@d.Repuesto?.Nombre</td>
                        <td class="px-3 py-2 text-right">@d.Cantidad</td>
                        <td class="px-3 py-2 text-right">$ @d.PrecioCostoUnitario.ToString("N2")</td>
                        <td class="px-3 py-2 text-right font-semibold">$ @subtotal.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
