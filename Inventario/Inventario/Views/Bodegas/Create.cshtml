@model Inventario.Models.Inventario.Bodega

@{
    ViewData["Title"] = "Nueva bodega";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-slate-800">Nueva bodega</h1>
        <a asp-action="Index" class="text-xs px-4 py-2 rounded bg-slate-100 hover:bg-slate-200 text-slate-700">
            Volver
        </a>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
        <form asp-action="Create" method="post" class="space-y-5">
            <div asp-validation-summary="All" class="text-red-600 text-sm mb-3"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Nombre" class="block text-sm font-semibold text-slate-700 mb-1">Nombre</label>
                    <input asp-for="Nombre" class="w-full px-3 py-2 border rounded text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="Nombre" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Ubicacion" class="block text-sm font-semibold text-slate-700 mb-1">Ubicación</label>
                    <input asp-for="Ubicacion" class="w-full px-3 py-2 border rounded text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="Ubicacion" class="text-xs text-red-600"></span>
                </div>
            </div>

            <div class="flex items-center mt-6">
                <input asp-for="Activa" class="h-4 w-4 text-emerald-600 border-slate-300 rounded" />
                <label asp-for="Activa" class="ml-2 text-sm text-slate-700">¿Bodega activa?</label>
            </div>

            <div class="flex justify-end mt-4">
                <button type="submit"
                        class="px-5 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm font-semibold">
                    Guardar bodega
                </button>
            </div>
        </form>
    </div>
</div>
