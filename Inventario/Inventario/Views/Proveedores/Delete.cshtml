@model Inventario.Models.Inventario.Proveedore

@{
    ViewData["Title"] = "Eliminar proveedor";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-slate-800">Eliminar proveedor</h1>
        <a asp-action="Index" class="text-xs px-4 py-2 rounded bg-slate-100 hover:bg-slate-200 text-slate-700">
            Volver
        </a>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
        <h2 class="text-lg text-slate-800">¿Estás seguro de que deseas eliminar al proveedor <strong>@Model.Nombre</strong>?</h2>
        <p class="text-sm text-slate-500">Esta acción no puede deshacerse.</p>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="px-5 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg text-sm font-semibold">
                Eliminar
            </button>
        </form>
    </div>
</div>
