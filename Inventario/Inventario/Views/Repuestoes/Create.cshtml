@model Inventario.Models.Inventario.Repuesto

@{
    ViewData["Title"] = "Nuevo repuesto";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h1 class="text-2xl font-bold text-slate-800">Nuevo repuesto</h1>
        <a asp-action="Index" class="text-xs px-4 py-2 rounded bg-slate-100 hover:bg-slate-200 text-slate-700">
            Volver
        </a>
    </div>

    <div class="bg-white rounded-xl shadow p-6">
        <form asp-action="Create" method="post" class="space-y-5">
            <div asp-validation-summary="All" class="text-red-600 text-sm mb-3"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Codigo" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                    <input asp-for="Codigo" class="w-full px-3 py-2 border rounded text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="Codigo" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Nombre" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                    <input asp-for="Nombre" class="w-full px-3 py-2 border rounded text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="Nombre" class="text-xs text-red-600"></span>
                </div>
            </div>

            <div>
                <label asp-for="Descripcion" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                <textarea asp-for="Descripcion" rows="3" class="w-full px-3 py-2 border rounded text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500"></textarea>
                <span asp-validation-for="Descripcion" class="text-xs text-red-600"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label asp-for="CategoriaId" class="block text-sm font-semibold text-slate-700 mb-1">Categoría</label>
                    <select asp-for="CategoriaId" asp-items="ViewBag.CategoriaId"
                            class="w-full px-3 py-2 border rounded text-sm focus:outline-none focus:ring-2 focus:ring-emerald-500">
                        <option value="">-- Seleccione --</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="PrecioCostoPromedio" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                    <input asp-for="PrecioCostoPromedio" type="number" step="0.01" min="0"
                           class="w-full px-3 py-2 border rounded text-sm text-right focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="PrecioCostoPromedio" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="StockMinimoGlobal" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                    <input asp-for="StockMinimoGlobal" type="number" min="0"
                           class="w-full px-3 py-2 border rounded text-sm text-right focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="StockMinimoGlobal" class="text-xs text-red-600"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label asp-for="MargenGananciaPorcentaje" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                    <input asp-for="MargenGananciaPorcentaje" type="number" step="0.01" min="0"
                           class="w-full px-3 py-2 border rounded text-sm text-right focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="MargenGananciaPorcentaje" class="text-xs text-red-600"></span>
                </div>

                <div>
                    <label asp-for="DescuentoPorcentaje" class="block text-sm font-semibold text-slate-700 mb-1"></label>
                    <input asp-for="DescuentoPorcentaje" type="number" step="0.01" min="0"
                           class="w-full px-3 py-2 border rounded text-sm text-right focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="DescuentoPorcentaje" class="text-xs text-red-600"></span>
                </div>

                <div class="flex items-center mt-6">
                    <input asp-for="Activo" class="h-4 w-4 text-emerald-600 border-slate-300 rounded" />
                    <label asp-for="Activo" class="ml-2 text-sm text-slate-700"></label>
                </div>
            </div>

            <div class="flex justify-end mt-4">
                <button type="submit"
                        class="px-5 py-2 bg-emerald-600 hover:bg-emerald-700 text-white rounded-lg text-sm font-semibold">
                    Guardar repuesto
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
