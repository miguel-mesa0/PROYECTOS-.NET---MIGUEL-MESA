@model Inventario.Models.Inventario.Categoria

@{
    ViewData["Title"] = "Eliminar categoría";
}

<div class="max-w-xl mx-auto bg-white rounded-xl shadow-md p-6">
    <h1 class="text-xl font-bold text-red-600 mb-2">Eliminar categoría</h1>
    <p class="text-sm text-slate-500 mb-4">
        ¿Estás seguro de que deseas eliminar esta categoría? Esta acción no se puede deshacer.
    </p>

    <dl class="space-y-3 text-sm mb-6">
        <div>
            <dt class="font-semibold text-slate-600">Nombre</dt>
            <dd class="text-slate-800">@Model.Nombre</dd>
        </div>
        <div>
            <dt class="font-semibold text-slate-600">Descripción</dt>
            <dd class="text-slate-800">@Model.Descripcion</dd>
        </div>
    </dl>

    <form asp-action="Delete" method="post" class="flex justify-between items-center">
        <input type="hidden" asp-for="Id" />

        <a asp-action="Index"
           class="text-xs text-slate-500 hover:text-slate-700">
            ← Cancelar
        </a>

        <button type="submit"
                class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-xs font-semibold rounded-lg">
            Eliminar definitivamente
        </button>
    </form>
</div>
